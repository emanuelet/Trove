<!-- Master layout. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/detail_borrow_libraries_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/borrow_label_details"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:fillViewport="true"
        android:elevation="10dp"
        android:focusableInTouchMode="false">


        <ListView
            android:id="@+id/detail_borrow_libraries_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stackFromBottom="false" />


    </ScrollView>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="5dp"
        android:id="@+id/cont"
        android:elevation="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_year_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/detail_year_textview_sublabel"
                android:layout_width="wrap_content"
                android:text="@string/year_sublabel_detail"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:id="@+id/dv1"
            android:background="@android:color/darker_gray"
            android:layout_margin="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/detail_versions_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/detail_versions_textview_sublabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_sublabel_details"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:id="@+id/dv2"
            android:background="@android:color/darker_gray"
            android:layout_margin="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/borrow_book_black"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/detail_buy_btn"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/detail_buy_textview_sublabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buy_sublabel_details"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>