<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!--
         Used in Action Bar, and in AndroidManifest to tell the device the name of this app.
         It's to keep this short, so your launcher icon isn't displayed with "The greatest Wea"
         or something similar.
    -->
    <string name="app_name">Trove</string>
    <string name="main_fragment">com.etapps.trove.ForecastFragment</string>
    <!--
         By convention, "action" denotes that this String will be used as the label for an Action,
         typically from the action bar.  The ActionBar is limited real estate, so shorter is better.
    -->
    <string name="action_settings">Settings</string>
    <string name="action_map">Map Location</string>
    <string name="action_share">Share</string>
    <!-- Menu label to fetch updated weather info from the server -->
    <string name="action_refresh" translatable="false">Refresh</string>

    <string name="title_activity_detail">Details</string>
    <string name="title_activity_settings">Settings</string>

    <!-- Label for the location preference [CHAR LIMIT=30] -->
    <string name="pref_results_number_label">Number of Results</string>

    <!-- Key name for storing location in SharedPreferences [CHAR LIMIT=NONE] -->
    <string name="pref_results_key" translatable="false">results_nr</string>

    <!-- Default postal code for location preference [CHAR LIMIT=NONE] -->
    <string name="pref_results_default" translatable="false">5</string>

    <!-- Notification Format -->
    <string name="format_notification">
        Forecast for today: %1$s with a high of %2$s and low of %3$s.
    </string>

    <!-- Language-specific constants -->
    <string name="today">Today</string>

    <!-- For labelling tomorrow's forecast [CHAR LIMIT=15] -->
    <string name="tomorrow">Tomorrow</string>

    <!-- Date format [CHAR LIMIT=NONE] -->
    <string name="format_full_friendly_date">
        <xliff:g id="month">%1$s</xliff:g>, <xliff:g id="day">%2$s</xliff:g>
    </string>


    <!-- Share format [CHAR LIMIT=NONE]-->
    <string name="format_share">
        Weather for <xliff:g id="date">%1$s</xliff:g> in <xliff:g id="location">%2$s</xliff:g>:
        A high of <xliff:g id="high">%3$s</xliff:g> and low of
        <xliff:g id="low">%4$s</xliff:g></string>
    <!-- SyncAdapter related -->
    <string name="sync_account_type">trove.etapps.com</string>
    <string name="sync_authority">"com.etapps.trove"</string>
    <string name="content_authority">com.etapps.trove</string>
    <string name="menu_search">Search</string>
    <string name="search_label">Search</string>
    <string name="search_hint">Search for Books</string>
    <string name="books_data">content://com.etapps.trove.data.SuggestionProvider/</string>
    <string name="settings_description">Books on Trove.com.au</string>
    <string name="about_pref">Version</string>
    <string name="about_pref_summ"> 0.9 (Beta)</string>
    <string name="about_pref_title">Version</string>
    <string name="author_pref_summ">Author</string>
    <string name="author_pref_title">Emanuele Tonello</string>
    <string name="prefs_web_page">Trove Website</string>
    <string name="list_search_header">Last Search Results</string>
    <string name="suggestions_content_authority">com.etapps.trove.data.SuggestionProvider</string>
    <string name="updlib_pref_title">Update Libraries List</string>
    <string name="updlib_pref_summ">Update the list of libraries</string>
    <string name="update_lib_pref">update_lib</string>
    <string name="action_go">Go To</string>
    <string name="action_buy">Buy</string>
</resources>
